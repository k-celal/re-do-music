@using re_do_music.MVC.Areas.Admin.Models
@addTagHelper *, re_do_music.MVC.TagHelpers

@{
    ViewData["Title"] = "UserList";
}
@model List<UserViewModel>


<h1>Üye Liste</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Kullanıcı Adı</th>
            <th>Email</th>
            <th>Roller</th>
            <th>Rol İşlemleri</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td>
                    @foreach (var role in item.Roles)
                    {
                        <span class="badge bg-secondary m-lg-1">@role.ToLower()</span>
                    }
                </td>
                <td><a class="btn btn-primary btn-sm" asp-area="Admin" asp-action="AssingRoleToUser" asp-controller="Roles" asp-route-id="@item.Id">Güncelle</a></td>

            </tr>
        }
    </tbody>
</table>