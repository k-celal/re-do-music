@using re_do_music.MVC.Areas.Admin.Models;
@{
    ViewData["Title"] = "Index";
}
@model List<RoleViewModel>

<a class="btn btn-primary" asp-controller="Roles" asp-action="RoleCreate" asp-area="Admin">Rol Ekle</a>

<div class="row">
    <div class="col-md-8 offset-md-2">
        @if ((TempData["SuccessMessage"] != null))
        {
            <div class="alert alert-info" role="alert">
                @TempData["SuccessMessage"]
            </div>
        }
        <h2>Rol Listesi</h2>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Rol Adı</th>
                    <th>Rol Güncelle</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td><a class="btn btn-primary btn-sm" asp-area="Admin" asp-action="RoleUpdate" asp-controller="Roles" asp-route-id="@item.Id">Güncelle</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>